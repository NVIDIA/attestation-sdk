# 1. Generator-agnostic options
# 1.1 Generator-agnostic component-agnostic options
set(CPACK_PACKAGE_CONTACT
  "NVIDIA Attestation Team <attestation-support@nvidia.com>"
)
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "NVIDIA Attestation SDK Library")
set(CPACK_SOURCE_IGNORE_FILES
  "[.]git/"
  "build/"
  ".*~$"
)

# Consider adding a longer CPACK_PACKAGE_DESCRIPTION_FILE pointing to a
# description text file

# 1.2 Generator-agnostic development specific options
set(CPACK_COMPONENT_DEVELOPMENT_DESCRIPTION
  "NVIDIA Attestation SDK Headers and CMake files"
)
set(CPACK_COMPONENT_DEVELOPMENT_DISPLAY_NAME "NV Attestation Development Files")

# 1.3 Generator-agnostic runtime specific options
set(CPACK_COMPONENT_RUNTIME_DISPLAY_NAME "NV Attestation Runtime")
set(CPACK_COMPONENT_RUNTIME_DESCRIPTION "NVIDIA Attestation SDK Shared Library")

# 2. Archive generator options
set(CPACK_ARCHIVE_COMPONENT_INSTALL ON)

# 3. DEB generator options
# 3.1 DEB generator component-agnostic options
set(CPACK_DEB_COMPONENT_INSTALL ON)
set(CPACK_DEBIAN_FILE_NAME DEB-DEFAULT)
set(CPACK_DEBIAN_PACKAGE_GENERATE_SHLIBS ON)
set(CPACK_DEBIAN_PACKAGE_MAINTAINER
  "NVIDIA Attestation Team <attestation-support@nvidia.com>"
)
set(CPACK_DEBIAN_PACKAGE_SHLIBDEPS ON)

# 3.2 DEB generator development component options
set(CPACK_DEBIAN_DEVELOPMENT_PACKAGE_NAME
  "libnv-attestation@NV_ATTESTATION_SOVERSION@-dev")

# 3.3 DEB generator runtime component options
# Generate shlibs file for the runtime package (recommended)
set(CPACK_DEBIAN_RUNTIME_PACKAGE_NAME
  "libnv-attestation@NV_ATTESTATION_SOVERSION@"
)
# Dependencies for the runtime package will be calculated automatically

